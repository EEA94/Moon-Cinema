generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id       String    @id @default(uuid()) @db.Uuid
  Title    String
  Plot     String
  Genre    String
  Actors   String
  Language String
  Director String
  Release  String
  Poster   String
  Rated    String
  Trailer  String
  Runtime  Int
  Type     String
  Comment  Comment[]
  show     Show[]
}

model Room {
  id     Int      @id
  seat   Seat[]
  show   Show[]
  ticket Ticket[]
}

model Sale {
  id     Int      @id
  userId String   @db.Uuid
  user   User     @relation(fields: [userId], references: [id])
  ticket Ticket[]
}

model Seat {
  id     Int     @id
  roomId Int
  room   Room    @relation(fields: [roomId], references: [id])
  ticket Ticket?
}

model Show {
  id      Int      @id
  roomId  Int
  movieId String   @db.Uuid
  movie   Movie    @relation(fields: [movieId], references: [id])
  room    Room     @relation(fields: [roomId], references: [id])
  ticket  Ticket[]
}

model Ticket {
  id     Int  @id
  seatId Int  @unique
  roomId Int
  saleId Int
  showId Int
  room   Room @relation(fields: [roomId], references: [id])
  sale   Sale @relation(fields: [saleId], references: [id])
  seat1  Seat @relation(fields: [seatId], references: [id])
  show   Show @relation(fields: [showId], references: [id])
}

model User {
  id       String @id @db.Uuid
  username String @db.Char(20)
  password String @db.Char(20)
  role     Int
  sale     Sale[]
}

model Comment {
  id      String @id @db.Uuid
  Text    String
  movieId String @db.Uuid
  Movie   Movie  @relation(fields: [movieId], references: [id])
}